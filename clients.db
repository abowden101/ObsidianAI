import sqlite3

conn = sqlite3.connect('clients.db')
c = conn.cursor()

c.execute('''CREATE TABLE IF NOT EXISTS clients (
    client_id INTEGER PRIMARY KEY AUTOINCREMENT,
    company_name TEXT NOT NULL,
    service_tier TEXT,
    onboarding_date DATE DEFAULT CURRENT_DATE
)''')

c.execute('''CREATE TABLE IF NOT EXISTS network_inventory (
    hardware_id INTEGER PRIMARY KEY AUTOINCREMENT,
    client_id INTEGER,
    make TEXT,
    model TEXT,
    serial_number TEXT UNIQUE,
    status TEXT DEFAULT 'deployed'
)''')

c.execute('''CREATE TABLE IF NOT EXISTS ai_service_logs (
    log_id INTEGER PRIMARY KEY AUTOINCREMENT,
    client_id INTEGER,
    service_type TEXT,
    tokens_used INTEGER,
    timestamp DATETIME DEFAULT CURRENT_TIMESTAMP
)''')

# Sample data
c.executemany('INSERT OR IGNORE INTO clients (client_id, company_name, service_tier) VALUES (?,?,?)', [
    (1, 'Grand Orlando Resort & Spa', 'Obsidian Core'),
    (2, 'Universal Theme Park Operations', 'Enterprise'),
    (3, 'Downtown Orlando Medical Group', 'Foundation')
])

conn.commit()
conn.close()
print("âœ… Database initialized with sample Orlando clients.")
